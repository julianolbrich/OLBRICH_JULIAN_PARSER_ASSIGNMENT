<div class="container-fluid">
  <div class="row" style="height: 100vh; overflow: scroll;">
    <div class="col-lg-11 col-md-12 col-sm-12 mx-auto d-flex flex-column justify-content-between">

      <p id="notice"><%= notice %></p>

      <div>
        <h2 class="text-right" style="margin-bottom: 6px;"> ADDRESS PARSER </h2>
        <h5 class="text-right" style="margin-bottom: 10px;"> HOMEDAY ASSIGNMENT </h5>
        <h6 class="text-right" style="margin-bottom: 15px;"> Julian Olbrich </h6>
      </div>

      <%= render 'form', flat: @flat %>

      <% unless @flats == [] %>
        <table class="table">
          <thead>
            <tr>
              <th>Input</th>
              <th>Street</th>
              <th>Number</th>
              <th>District</th>
              <th>PLZ</th>
              <th>City</th>
              <th>State</th>
              <th>Country</th>
              <th colspan="2"></th>
            </tr>
          </thead>

          <tbody>
              <% @flats.each do |flat| %>
                <tr>
                  <td><%= flat.address %></td>
                  <td><%= flat.street %></td>
                  <td><%= flat.street_number %></td>
                  <td><%= flat.district %></td>
                  <td><%= flat.postal_code %></td>
                  <td><%= flat.city %></td>
                  <td><%= flat.state %></td>
                  <td><%= flat.country %></td>

                  <td><%= link_to 'Show', flat_path(flat), class: "btn btn-outline-success", style: "line-height: 1; padding: 0.4rem 0.5rem;" %></td>
                  <td><%= link_to 'Delete', flat_path(flat.id), method: :delete, class: "btn btn-outline-danger", style: "line-height: 1; padding: 0.4rem 0.5rem;" %></td>
                </tr>
              <% end %>
          </tbody>
        </table>
      <% end %>

      <%#= link_to 'New Flat', new_flat_path %>

      <div id="map"
           style="width: 100%; height: 400px; margin-bottom: 60px;"
           data-markers="<%= @markers.to_json %>">
      </div>

    </div>
  </div>
</div>

<%#= raise %>
