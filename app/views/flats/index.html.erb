<div class="container-fluid">
  <div class="row p-2" style="height: 100vh; overflow: scroll;">
    <div class="col-lg-11 col-md-12 col-sm-12 mx-auto d-flex flex-column justify-content-between">

      <div>
        <p id="notice"><%= notice %></p>

        <div class="d-flex justify-content-between" style="padding-right: 3px;">
          <div>
          </div>
          <div>
            <h2 class="text-right" style="margin-top: 5px; margin-bottom: 6px;"> ADDRESS PARSER </h2>
            <h5 class="text-right" style="margin-bottom: 10px;"> HOMEDAY ASSIGNMENT </h5>
            <h6 class="text-right" style="margin-bottom: 22px;"> Julian Olbrich </h6>
          </div>
        </div>

        <%= render 'form', flat: @flat %>

        <% unless @flats == [] %>
          <table class="table" style="margin-top: 20px;">
            <thead>
              <tr>
                <th>Input</th>
                <th>Street</th>
                <th>#</th>
                <th>PLZ</th>
                <th>City</th>
                <th>District</th>
                <th>State</th>
                <th>Country</th>
                <th colspan="2"></th>
              </tr>
            </thead>

            <tbody>
                <% @flats.each do |flat| %>
                  <tr>
                    <td><%= flat.address %></td>
                    <td><%= flat.street %></td>
                    <td><%= flat.street_number %></td>
                    <td><%= flat.postal_code %></td>
                    <td><%= flat.city %></td>
                    <td><%= flat.district %></td>
                    <td><%= flat.state %></td>
                    <td><%= flat.country %></td>

                    <td style="text-align: right;"><%= link_to 'Show', flat_path(flat), class: "btn btn-outline-success", style: "line-height: 1; padding: 0.4rem 0.5rem;" %></td>
                    <td style="text-align: right;"><%= link_to 'Delete', flat_path(flat.id), method: :delete, class: "btn btn-outline-danger", style: "line-height: 1; padding: 0.4rem 0.5rem;" %></td>
                  </tr>
                <% end %>
            </tbody>
          </table>
        <% end %>

        <div class="col-12 d-flex w-100 p-0" style="justify-content: flex-end;">
            <%= will_paginate @flats, :container => false, :page_links => true, renderer: BootstrapPagination::Rails, class: "apple_pagination" %>
        </div>
      </div>


      <div id="map"
           style="width: 100%; height: 440px; margin-bottom: 35px;"
           data-markers="<%= @markers.to_json %>">
      </div>

    </div>
  </div>
</div>

<%#= raise %>
