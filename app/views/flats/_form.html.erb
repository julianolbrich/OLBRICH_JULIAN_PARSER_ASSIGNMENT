<%= simple_form_for(@flat) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :address, autofocus: true, label: false, placeholder: "While typing please select your address from the suggestion dropdown .." %>
  </div>

  <p style="font-size: 14px; letter-spacing: 0.3px; padding-left: 4px;"> <em> <strong> tips: </strong> search for 'Prinzessinnen<span style="text-decoration: underline;">stra√üe</span> 26' instead of 'Prinzessinnen<span style="text-decoration: underline;">str.</span> 26' </em> </p>

  <div class="form-actions text-left" style="margin-bottom: 0px;" id="parse-button">
    <%= f.button :submit, value: "PARSE ADDRESS", class: "btn btn-primary", method: :post, remote: true %>
  </div>

  <br>
<% end %>
