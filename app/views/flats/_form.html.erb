<%= simple_form_for(@flat) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :address, autofocus: true, label: false, placeholder: "While typing please select your address from the suggestion dropdown .." %>
  </div>

  <div class="d-flex justify-content-between">
      <div class="d-flex">
        <div class="form-actions text-left" style="margin-bottom: 2px; margin-left: 1px;" id="parse-button">
          <%= f.button :submit, value: "PARSE ADDRESS", class: "btn btn-primary", method: :post, remote: true %>
        </div>
        <p style="font-size: 15px; letter-spacing: 0.4px; padding-left: 14px; padding-top: 7px;"> <em> <strong> tip: </strong> search for 'Prinzessinnen<span style="text-decoration: underline;">stra√üe</span> 26' instead of 'Prinzessinnen<span style="text-decoration: underline;">str.</span> 26' </em> </p>
      </div>
      <%= link_to 'PARSER API', api_v1_addresses_path, class: "btn btn-outline-dark", style: "height: fit-content; font-size: 15px; margin-right: 1px;", target: :_blank %>
  </div>
  <br>
<% end %>
